pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                withMaven(maven: 'maven_home') {
                    sh 'mvn clean compile'
                }
            }
        }
        stage('Test') {
            steps {
                withMaven(maven: 'maven_home') {
                    sh 'mvn test'
                }
            }
        }
    }
}